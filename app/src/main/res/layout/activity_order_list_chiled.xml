<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/am"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Select_Main_category_Service_Menu.Select_Main_Menu"
    android:orientation="vertical">



    <TextView
        android:id="@+id/tv_noresult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginRight="3dp"
        android:gravity="center"
        android:text="@string/sorry_no_match_please_try_again"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/li1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_show_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/myshadow2"
            android:padding="1dp"
            android:paddingLeft="2dp"
            android:paddingEnd="1dp"
            android:paddingRight="4dp"
            android:text="@string/show_all"
            android:textColor="@color/yellow" />

        <Button
            android:id="@+id/btn_show_near"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/myshadow2"
            android:padding="1dp"
            android:paddingStart="1dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/show_near_by"
            android:textColor="@color/yellow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/li1"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout201"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.80">

<!--                <FrameLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_gravity="center_vertical|start"-->
<!--                    android:paddingTop="5dp"-->
<!--                    android:paddingBottom="5dp">-->

<!--                    <Spinner-->
<!--                        android:id="@+id/sp_country2"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:background="@drawable/spinner_backgroud"-->
<!--                        android:gravity="center"-->

<!--                        android:spinnerMode="dropdown"-->
<!--                        android:visibility="visible" />-->

<!--                    <ImageView-->
<!--                        android:layout_width="49dp"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_gravity="center_vertical|end"-->
<!--                        app:srcCompat="@drawable/dropdown_yellow" />-->

<!--                </FrameLayout>-->
                <TextView
                    android:id="@+id/tv_country2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="28sp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.80">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|start"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <Spinner
                        android:id="@+id/sp_sub_country2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/spinner_backgroud"
                        android:gravity="center"
                        android:spinnerMode="dropdown"
                        android:visibility="visible"

                        />

                    <ImageView
                        android:layout_width="49dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|end"
                        app:srcCompat="@drawable/dropdown_yellow" />
                </FrameLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/seartch"
android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_s"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@drawable/my_shadow_r"
                android:text="@string/search"
                 />

            <EditText
                android:id="@+id/et_seartch2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/spinner_backgroud"
                android:focusable="true"
                android:gravity="center"
                android:hint="@string/search_by_name"
                android:spinnerMode="dropdown"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/image_search2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|end"
                android:layout_weight="0"
                android:background="@drawable/search"
                android:visibility="gone"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_clear2"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/my_shadow_y"
            android:text="@string/clear_filter"></Button>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_noresult"
        android:layout_marginTop="0dp"
        android:scrollbars="vertical"></androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>